!!!
%html
  %head
    %title= page_title
    = stylesheet_link_tag '/stylesheets/screen.css'
    = javascript_include_tag :defaults
    = javascript_include_tag '/javascripts/libs/jquery.scrollTo-1.4.2/jquery.scrollTo-min.js'
    /[if lt IE 9]
      %script{:src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}
    = yield :scripts
    = csrf_meta_tag
    = favicon_link_tag "/favicon.png"
    == <meta name="keywords" content="" />
    == <meta name="description" content="" />
    == <meta name="googlebot" content="index,follow" />
    == <meta name="robots" content="index,follow" />
    == <meta name="Revisit-After" content="7 days" />
    == <meta name="city" content="Lima" />
    == <meta name="country" content="Peru" />
    == <meta name="state" content="Lima" />
    == <meta name="zip code" content="Lima18" />
    == <meta name="subject" content="" />
    == <meta name="author" content="Kosmyka.com" />
    == <meta name="copyright" content="&copy;Todos los derechos reservados." />
    == <meta name="geo.placename" content="Lima, Peru" />
    == <meta name="geo.region" content="PE-Lima" />
    == <meta name="google-site-verification" content="EsdsLyvLs5l-BaSMnU8k8FFmZbvfC8Gc90IOyKOVJfY" />

  %body
    - if notice
      %p.notice= notice

    %header
      .wrapper
        %h1.site-name
          = link_to 'Gemelitas Sutcliffe Pastor', 'javascript:$.scrollTo("body",800);'

        = render 'layouts/menu'
    %section#content{:role => 'main'}
      = yield

    %footer#footer-bottom.sixteen.columns
      .inner
        %p#social-links
          = link_to 'Link al evento en el facebook', 'http://www.facebook.com/events/330718627035172'
        %p#author
          = link_to image_tag('/images/kosmyka.png'), 'http://www.kosmyka.com', :target => '_blank'
    = render 'shared/google_analytics'
